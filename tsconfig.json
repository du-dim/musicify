{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,    
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true, 
    "strict": true,
    "noImplicitAny": true,         
    "types": [ "node"],
  },  
  "exclude": ["node_modules", "dist"  ],
  "include": ["src" ],
  "ts-node": {  
    "esm": true,
  }       
}